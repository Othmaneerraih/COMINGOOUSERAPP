<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_back_voip_two"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/place_autocomplete_button_padding"
        android:src="@drawable/back_arrow_blue" />

    <TextView
        android:id="@+id/tv_name_voip_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/place_autocomplete_button_padding"
        android:text="User's Name"
        android:textAlignment="center"
        android:textSize="@dimen/txt_size_large"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_image_voip_two"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:src="@drawable/name_cnu"
        app:civ_border_color="#85050c61"
        app:civ_border_width="10dp" />

    <TextView
        android:id="@+id/tv_appelle_voip_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_voip_two"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/txt_size_large"
        android:text="appel" />

    <TextView
        android:id="@+id/tv_time_count_voip_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_voip_two"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="@dimen/txt_size_large"
        android:text="0:26"
        android:textSize="@dimen/txt_size_large" />

    <LinearLayout
        android:id="@+id/ll_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/iv_user_image_voip_two">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_recv_call_voip_two"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/name_cnu"
            app:civ_border_color="@android:color/holo_green_dark"
            app:civ_border_width="5dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_cancel_call_voip_two"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:src="@drawable/name_cnu"
            app:civ_border_color="@android:color/holo_green_dark"
            app:civ_border_width="5dp" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_end_call_voip_two"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:src="@drawable/name_cnu"
        android:layout_below="@+id/ll_controls"
        android:layout_centerHorizontal="true"
        app:civ_border_color="@android:color/holo_green_dark"
        app:civ_border_width="5dp" />

</RelativeLayout>